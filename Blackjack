def card1(hand):
    random.choice(hand)
    print ("cardchoice1")
    if random.choice(hand) == "A" or 14:
        random.randint(1,11)
        print(random.randint(1,11)) 
    else:
        print (random.choice(hand)) 
        
def card2(hand):
    random.choice(hand) 
    print ("cardchoice2")
    if random.choice(hand) == "A" or 14:
        random.randint(1,11)
        print(random.randint(1,11)) 
    print(random.choice(hand)) 

def hit(hand):
