def score(dealerhand, playerhand):
if sumcard(playerhand) == 21:
		results(dealerhand, playerhand)
print "Blackjack!\n"
elif sumcard(dealerhand) == 21:
		results(dealerhand, playerhand)		
print "Sorry, you lose. The dealer got a blackjack.\n"
