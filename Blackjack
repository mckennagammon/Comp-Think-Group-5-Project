def sumcard(hand):
    sumcard = 0
    for card in hand:
        if card == "J" or card == "Q" or card == "K":
            sumcard+= 10 
        elif card == "A":
            if sumcard >= 11: sumcard+=1
        else : sumcard+= 1
    else: sumcard += card
    return sumcard
